

<h1>Editar Recebedor</h1>

<form action="/receivers/<%= receiver.id %>" method="POST" class="mt-3">
  <div class="mb-3">
    <label class="form-label">Nome</label>
    <input name="name" required class="form-control" value="<%= receiver.name %>" />
  </div>

  <div class="mb-3">
    <label class="form-label">Saldo (R$)</label>
    <input name="balance" class="form-control" type="number" step="0.01" value="<%= (receiver.balance/100).toFixed(2) %>" />
    <div class="form-text">Digite o valor em reais.</div>
  </div>

  <button class="btn btn-primary">Salvar</button>
  <a class="btn btn-link" href="/receivers">Cancelar</a>
</form>
