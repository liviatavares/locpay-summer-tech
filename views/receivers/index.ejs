<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Recebedores</h1>
  <a class="btn btn-primary" href="/receivers/create">Novo Recebedor</a>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th class="text-end">Saldo (R$)</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% receivers.forEach(r => { %>
      <tr>
        <td><%= r.id %></td>
        <td><%= r.name %></td>
        <td class="text-end"><%= (r.balance/100).toFixed(2) %></td>
        <td>
          <a class="btn btn-sm btn-outline-primary" href="/receivers/<%= r.id %>">Ver</a>
          <a class="btn btn-sm btn-outline-secondary" href="/receivers/<%= r.id %>/edit">Editar</a>

          <form action="/receivers/<%= r.id %>/delete" method="POST" style="display:inline">
            <button class="btn btn-sm btn-danger" onclick="return confirm('Confirma exclusão?')">Excluir</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
