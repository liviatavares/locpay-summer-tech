<h1>Nova Operação</h1>

<form action="/operations" method="POST" class="mt-3">
  <div class="mb-3">
    <label class="form-label">Recebedor</label>
    <select name="receiver_id" required class="form-select">
      <option value="">-- selecione --</option>
      <% receivers.forEach(r => { %>
        <option value="<%= r.id %>"><%= r.name %> — Saldo: R$ <%= (r.balance/100).toFixed(2) %></option>
      <% }) %>
    </select>
  </div>

  <div class="mb-3">
    <label class="form-label">Valor Bruto (R$)</label>
    <input name="gross_value" type="number" step="0.01" required class="form-control" placeholder="1000.00" />
    <div class="form-text">Digite em reais. A taxa de 3% será calculada automaticamente.</div>
  </div>

  <button class="btn btn-primary">Criar Operação</button>
  <a class="btn btn-link" href="/receivers">Cancelar</a>
</form>
