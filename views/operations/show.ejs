<h1>Operação #<%= op.id %></h1>

<ul class="list-group">
  <li class="list-group-item"><strong>Recebedor ID:</strong> <a href="/receivers/<%= op.receiver_id %>"><%= op.receiver_id %></a></li>
  <li class="list-group-item"><strong>Valor Bruto:</strong> R$ <%= (op.gross_value/100).toFixed(2) %></li>
  <li class="list-group-item"><strong>Taxa (3%):</strong> R$ <%= (op.fee/100).toFixed(2) %></li>
  <li class="list-group-item"><strong>Valor Líquido:</strong> R$ <%= (op.net_value/100).toFixed(2) %></li>
  <li class="list-group-item"><strong>Status:</strong> <%= op.status %></li>
</ul>

<% if (op.status === 'pending') { %>
  <form action="/operations/<%= op.id %>/confirm" method="POST" class="mt-3">
    <button class="btn btn-success">Confirmar Operação</button>
  </form>
<% } %>

<a class="btn btn-link mt-3" href="/receivers/<%= op.receiver_id %>">Voltar ao recebedor</a>
